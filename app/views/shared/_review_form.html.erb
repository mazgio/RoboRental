
<%= simple_form_for [ @booking, @review ] do |f| %>
  <%= f.input :content, placeholder: "Type something..." %>
  <%= f.input :rating, as: :select, collection: (1..5), prompt: "Select a rating", input_html: { class: 'form-control' } %>
  <%= f.submit "Save Review", class: "btn bg-dark text-white", data: {action: "click->fake-modal#activateSuccess"}  %>
<% end %>
