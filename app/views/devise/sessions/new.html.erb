<div class="background-image">
  <div class="container login mb-4">
    <div class="row justify-content-center align-items-center vh-100">
      <div class="col-6 rounded p-4" style="background-color: white">
        <h2 class="text-center">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%#= f.input :first_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "first-name" }%>
            <%#= f.input :last_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "last-name" }%>
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-dark text-white w-100 mb-3"%>
          </div>
        <% end %>
      <div class="custom-forget">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Don't have an account?", new_registration_path(resource_name) %>
        <% end %>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
