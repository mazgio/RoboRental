    <% if params[:controller] == "pages" && params[:action] == "home"  %>
      <%= nil %>
      <% else %>
      <%= render "shared/navbar" %>
    <% end %>
    <%# <div class="container p-4"> %>
      <%= yield %>
    <%# </div> %>

  </body>
