<div class="container font-db">
  <div class="first-wrapper">
    <div class="style-db layout-db-1">
      <div class="d-flex align-items-center justify-content-between">
        <div>
        <div>
          <img class="icon-db mb-3" src="https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/v1696521230/ovamdokvvff2re3cyxwk.jpg" alt="icon-user">
        </div>
          <h1>Your Info</h1>
            <% if user_signed_in? %>
            <p class="border-bottom p-2">First name: <%= current_user.first_name %></p>
            <p class="border-bottom p-2">Last name: <%= current_user.last_name %></p>
            <p class="border-bottom p-2">Email: <%= current_user.email %></p>
            <% end %>
            <a href="<%= dashboard_path %>" class="btn btn-dark text-white w-100 mt-2" style="text-decoration: none;">Edit profile</a>
        </div>
      </div>
    </div>

    <div class="style-db layout-db-1">
      <h1>Activity</h1>
        <%# add some counting mechanics %>
        <div class="activity-wrapper mt-5">
          <div class="style-activity-db">
            <h2>10</h2>
            <p>Active bookings</p>
          </div>
          <div class="style-activity-db">
            <h2>3</h2>
            <p>Robots owned</p>
          </div>
          <div class="style-activity-db">
            <h2 style="color: green">$0</h2>
            <p>Earned</p>
          </div>

          <div class="style-activity-db">
            <h2 style="color: darkred">$20</h2>
            <p>Spent</p>
          </div>
        </div>
    </div>
  </div>

  <div>
    <div class="style-db layout-db-2">
      <h1>Your Bookings</h1>
      <%= render "shared/table_bookings", user_bookings: @user_bookings %>

      <a href="<%= robots_path %>" class="btn btn-dark text-white mt-5" style="text-decoration: none;">
        + Book Another Robot
      </a>
    </div>

    <div class="style-db layout-db-2">
      <h1 class="mb-5">Your Robot Garage</h1>
      <%= render "shared/table_robots", user_robots: @user_robots %>


      <%# <div class="mb-0">
        <p class="border-bottom p-2">Atlas</p>
        <p class="border-bottom p-2">Spot</p>
        <p class="border-bottom p-2">C-3PO</p>
        <p class="border-bottom p-2">Terminator</p>
        <p class="border-bottom p-2">Robocop</p>
      </div> %>
        <%# create robots form %>
      <a href="<%= new_robot_path %>" class="btn btn-dark text-white mt-5" style="text-decoration: none;">
        + Add Robot to your Garage
      </a>
    </div>

  </div>
</div>
